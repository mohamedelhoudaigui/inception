FROM debian:bullseye


RUN apt-get update && apt-get install -y \
    php \
    php-fpm \
    php-mysqli \
    php-pdo \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /var/www/html

RUN mkdir /srcs

COPY ./tools/init.sh ./tools/php-fpm.conf  /srcs

RUN chmod +x /srcs/init.sh

#CMD [ "sleep", "infinity" ]
CMD [ "bash", "-c", "/srcs/init.sh;" ]


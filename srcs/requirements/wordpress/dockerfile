FROM debian:bullseye


RUN apt-get update && apt-get install -y \
    php \
    php-fpm \
    php-mysqli \
    php-cgi \
    php-pdo \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /var/www/html

RUN mkdir /srcs

COPY ./tools/init.sh  /srcs
#COPY ./tools/php-fpm.conf /srcs

RUN chmod +x /srcs/init.sh

#CMD [ "sleep", "infinity" ]
CMD ["/srcs/init.sh"]

